<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:exported="true"
    android:background="@drawable/background_clean">

    <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Header"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:typeface="sans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            />

    <ImageView
        android:id="@+id/imageViewScoreBackground"
        android:layout_width="324dp"
        android:layout_height="160dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_rectangle_score"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeader" />

    <TextView
        android:id="@+id/textViewYourScore"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:gravity="start"
        android:text="YourScore"
        android:textAlignment="textStart"
        android:textColor="@color/colorText"
        android:textDirection="rtl"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="@+id/imageViewScoreBackground"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreBackground" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/heebo_regular"
        android:gravity="start"
        android:text="Score"
        android:textAlignment="textStart"
        android:textColor="@color/colorText"
        android:textDirection="rtl"
        android:textFontWeight="500"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBirdWelcome"
        app:layout_constraintTop_toBottomOf="@+id/textViewYourScore" />

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="start"
        android:text="Level"
        android:textAlignment="textStart"
        android:textColor="@color/colorText"
        android:textDirection="rtl"
        android:textSize="17sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewScoreBackground"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBirdWelcome"
        app:layout_constraintTop_toBottomOf="@+id/textViewScore"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewBirdWelcome"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_circle_bird"
        app:layout_constraintEnd_toEndOf="@+id/imageViewScoreBackground"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreBackground"
        app:srcCompat="@drawable/bird_welcome" />

    <Button
        android:id="@+id/buttonPlayWord"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="משחק זיהוי תמונות"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlay"/>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/play"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewScoreBackground" />

    <Button
        android:id="@+id/buttonPlayRecord"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="משחק זיהוי קולי"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonPlayWord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlay"/>

</android.support.constraint.ConstraintLayout>